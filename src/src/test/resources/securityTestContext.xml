<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:sec="http://www.springframework.org/schema/security"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">

    <!--todo import resource="localDBTestContext.xml"/-->

    <aop:aspectj-autoproxy/>
    <context:spring-configured/>
    <context:annotation-config/>

    <!-- Security config -->

    <sec:authentication-manager>
        <sec:authentication-provider ref="authenticationProvider"/>
    </sec:authentication-manager>

    <bean id="authenticationProvider" class="org.springframework.security.authentication.dao.DaoAuthenticationProvider">
        <property name="userDetailsService" ref="userDetailsService"/>
    </bean>

    <bean id="userDetailsService" class="com.itechart.sample.security.UserDetailsServiceImpl"/>

    <sec:global-method-security pre-post-annotations="enabled" proxy-target-class="true">
        <sec:expression-handler ref="methodSecurityExpressionHandler"/>
    </sec:global-method-security>

    <bean id="methodSecurityExpressionHandler"
          class="com.itechart.sample.security.expression.method.MethodSecurityExpressionHandlerImpl">
        <property name="permissionEvaluator" ref="aclPermissionEvaluator"/>
        <property name="permissionCacheOptimizer" ref="aclPermissionCacheOptimizer"/>
        <property name="roleHierarchy" ref="roleHierarchy"/>
    </bean>

    <bean id="aclPermissionEvaluator" class="com.itechart.sample.security.acl.AclPermissionEvaluator">
        <property name="aclService" ref="aclServiceMock"/>
        <property name="roleHierarchy" ref="roleHierarchy"/>
    </bean>

    <bean id="aclPermissionCacheOptimizer" class="com.itechart.sample.security.acl.AclPermissionCacheOptimizer">
        <property name="aclService" ref="aclServiceMock"/>
    </bean>

    <bean name="roleHierarchy" class="com.itechart.sample.security.RoleHierarchyImpl"/>

    <bean class="com.itechart.sample.security.hibernate.aop.AclHibernateSecurityAspect">
        <property name="filterParamsBuilder">
            <bean class="com.itechart.sample.security.hibernate.filter.FilterParamsBuilder">
                <property name="dictionaryService" ref="dictionaryServiceMock"/>
                <property name="roleHierarchy" ref="roleHierarchy"/>
            </bean>
        </property>
    </bean>

    <!-- Dao config -->

    <bean id="dataSource" class="com.itechart.sample.security.util.dao.NullDataSource"/>

    <bean id="transactionManager" class="org.springframework.orm.hibernate5.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory"/>
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="sessionFactory" class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="annotatedClasses">
            <list>
                <value>com.itechart.sample.security.model.TestObject</value>
                <value>com.itechart.sample.security.model.TestObjectExt</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</prop>
            </props>
        </property>
    </bean>

    <bean name="securedDao" class="com.itechart.sample.security.service.SecuredDao">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <!-- Mocked services -->

    <bean id="dictionaryServiceMock" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.itechart.sample.service.DictionaryService"/>
    </bean>

    <bean id="userServiceMock" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.itechart.sample.service.UserService"/>
    </bean>

    <bean id="roleServiceMock" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.itechart.sample.service.RoleService"/>
    </bean>

    <bean id="aclServiceMock" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.itechart.sample.service.AclService"/>
    </bean>

    <bean name="securedServiceSpy" class="org.mockito.Mockito" factory-method="spy">
        <constructor-arg value="com.itechart.sample.security.service.SecuredService" type="java.lang.Class"/>
    </bean>

    <bean name="securedService" class="com.itechart.sample.security.service.SecuredService"/>

</beans>